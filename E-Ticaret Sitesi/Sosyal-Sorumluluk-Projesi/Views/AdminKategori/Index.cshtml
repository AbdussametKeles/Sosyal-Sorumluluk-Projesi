@model IEnumerable<Sosyal_Sorumluluk_Projesi.Models.kategoriler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}

<h2>Kategoriler</h2>

<p>
    @Html.ActionLink("Yeni Kategori", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.kategori_adi)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.kategori_adi)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id=item.kategori_id }) |
            @Html.ActionLink("Detay", "Details", new { id=item.kategori_id }) |
            @Html.ActionLink("Sil", "Delete", new { id=item.kategori_id })
        </td>
    </tr>
}

</table>
