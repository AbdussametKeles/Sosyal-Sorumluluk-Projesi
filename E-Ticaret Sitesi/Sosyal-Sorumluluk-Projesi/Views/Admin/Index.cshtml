
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
} 


 


<div class="container-fluid">
    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Özet <small>Sosyal Sorumluluk Sitesi İstatiski Bilgileri</small>
            </h1>
            <ol class="breadcrumb">
                <li class="active">
                    <i class="fa fa-dashboard"></i> Site İçerik Bilgileri 
                </li>
            </ol>
        </div>
    </div>
    <!-- /.row -->

    <!-- /.row -->
