@model Sosyal_Sorumluluk_Projesi.Models.kullanicilar

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Üye Düzenle</h2>

@using (Html.BeginForm("Edit", "Uye", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
