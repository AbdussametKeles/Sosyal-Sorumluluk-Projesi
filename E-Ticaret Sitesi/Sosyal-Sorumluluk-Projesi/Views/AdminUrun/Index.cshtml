@model IEnumerable<Sosyal_Sorumluluk_Projesi.Models.urunler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}

<h2>Ürünler</h2>

<p>
    @Html.ActionLink("Ürün Ekle", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.kategoriler.kategori_adi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.urun_adi)
        </th> 

        <th>
            @Html.DisplayNameFor(model => model.urun_icerik)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.resim)
        </th>
      
        <th>

            @Html.DisplayNameFor(model => model.tarih)

        </th> 

        <th>

            @Html.DisplayNameFor(model => model.kullanici_id)

        </th> 

        <th>

            @Html.DisplayNameFor(model => model.memleket_id)

        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.kategoriler.kategori_adi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.urun_adi)
        </td> 

        <td>
            @Html.DisplayFor(modelItem => item.urun_icerik)
        </td>

        <td>
            <img width="75" src="@item.resim" />
        </td>
       

        <td>
            @Html.DisplayFor(modelItem => item.tarih)
        </td> 


        <td>
            @Html.DisplayFor(modelItem => item.kullanici_id)
        </td> 

        <td>
            @Html.DisplayFor(modelItem => item.memleket_id)
        </td>


        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id=item.urun_id }) |
            @Html.ActionLink("Detaylar", "Details", new { id=item.urun_id }) |
            @Html.ActionLink("Sil", "Delete", new { id=item.urun_id })
        </td>
    </tr>
}
      



</table>
